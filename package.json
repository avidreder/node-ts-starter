{
	"name": "node-ts-starter",
	"version": "1.0.0",
	"exports": "./dist/index.js",
	"type": "module",
	"typings": "dist/src/index.d.ts",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/avidreder/node-ts-starter.git",
	},
	"keywords": [
		"nodejs",
		"typescript",
		"modern",
		"starter",
		"nodejs typescript modern starter",
		"debugging",
		"ts",
		"esbuild",
		"prettier",
		"typescript5",
		"CI/CD",
		"minimal"
	],
	"author": "Andrew Reder",
	"license": "MIT",
	"scripts": {
		"bundle": "rimraf dist && esbuild --outdir=dist --sourcemap --bundle --platform=node --target=node20.10.0 ./src/index.ts",
		"check": "yarn biome check --write .",
		"compile": "tsc",
		"compile:watch": "tsc -w",
		"dev": "nodemon --watch src --watch test --ext ts,json --exec 'yarn bundle && yarn start'",
		"debug": "yarn bundle && node --enable-source-maps --inspect-brk ./dist/index.js",
		"debug:test": "node --inspect-brk ./node_modules/.bin/jest --runInBand .",
		"format": "yarn biome format --write",
		"format:check": "yarn biome format",
		"lint": "yarn biome lint --write",
		"lint:check": "yarn biome lint",
		"start": "node --enable-source-maps ./dist/index.js",
		"test": "jest --runInBand ."
	},
	"devDependencies": {
		"@babel/core": "7.25.8",
		"@babel/preset-env": "7.25.8",
		"@babel/preset-typescript": "7.25.7",
		"@biomejs/biome": "1.9.4",
		"@jest/globals": "29.7.0",
		"@tsconfig/node20": "20.1.4",
		"@types/jest": "29.5.13",
		"@types/node": "20.16.11",
		"esbuild": "0.21.3",
		"jest": "29.7.0",
		"nodemon": "3.1.7",
		"rimraf": "5.0.10",
		"typescript": "5.6.3"
	},
	"packageManager": "yarn@1.22.19+sha1.4ba7fc5c6e704fce2066ecbfb0b0d8976fe62447"
}
